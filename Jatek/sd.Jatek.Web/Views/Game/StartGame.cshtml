                <form method="post" class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label asp-for="Rounds" class="lable-control"></label>  
                        <input asp-for="Rounds" type="number" class="form-control" />  
                      <span asp-validation-for="Rounds" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="Public" type="checkbox" id="form3Example4c" class="form-control" />
