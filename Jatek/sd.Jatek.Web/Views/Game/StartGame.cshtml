<script>

function enterRoom() {
    var id = document.getElementById("groupId").value;
    var url = "https://localhost:5005/Game/EnterRoom?roomId=" + id;
    window.location.href = url;
}

function createRoom() {
    var id = document.getElementById("roundsId").value;
    var url = "https://localhost:5005/Game/CreateRoom?rounds=" + id;
    window.location.href = url;
}
</script>