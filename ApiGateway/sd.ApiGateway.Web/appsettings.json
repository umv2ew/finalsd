{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "Account/{**catchall}"
        }
      },
      "auth-home-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "Home/{**catchall}"
        }
      },
      "auth-images-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "images/{**catchall}"
        }
      },
      "jatek-route": {
        "ClusterId": "jatek-cluster",
        "Match": {
          "Path": "Game/{**catchall}"
        }
      },
      "statisztika-route": {
        "ClusterId": "statisztika-cluster",
        "Match": {
          "Path": "Statistics/{**catchall}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://192.168.18.105:5011"
          }
        }
      },
      "jatek-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://192.168.18.105:5005"
          }
        }
      },
      "statisztika-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://192.168.18.105:5031"
          }
        }
      }
    }
  }
}