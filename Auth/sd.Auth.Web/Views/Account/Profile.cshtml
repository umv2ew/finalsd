@model sd.Auth.Web.Models.StatisztikaViewModel

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<style>
.header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 100%), url("/images/FooterImage.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .header .logo {
      font-size: 25px;
      font-family: 'Sriracha', cursive;
      color: #000;
      text-decoration: none;
      margin-left: 30px;
    }

    .nav-items {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-right: 20px;
    }

    .nav-items a {
      font-size: 20px;
      font-family: 'Sriracha', cursive;
      text-decoration: none;
      color: #8e44ad;
      padding: 35px 20px;
    }

     .footer {
      display: flex;
      width: 100%;
      height: 20px;
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 100%), url("/images/FooterImage.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
</style>
</head>

<header class="header">
    <a href="#" class="logo">Leonardo</a>
    <nav class="nav-items">
      <a href="@Url.Action("Index", "Home")">Home</a>
      <a href="@Url.Action("StartGame", "Game")">Game</a>
      <a href="@Url.Action("Logout", "Account")">Logout</a>
    </nav>
</header>

<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <!--
              <form asp-action="UploadImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
            </div>-->
              <!--
              <form method="post" enctype="multipart/form-data" asp-action="UploadImage">
                  <div class="form-group">
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                  </div>
              </form> -->
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Statistics</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Played Games</h6>
                    <p class="text-muted"> @Html.DisplayFor(model => model.PlayedGames)</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Points</h6>
                    <p class="text-muted"> @Html.DisplayFor(model => model.Points)</p>
                  </div>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Number of wins</h6>
                    <p class="text-muted">@Html.DisplayFor(model => model.NumberOfWins)</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6></h6>
                    <p class="text-muted"></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<footer class="footer">
    <div class="copy">&copy; 2022 sd.Auth.Web</div>
</footer>